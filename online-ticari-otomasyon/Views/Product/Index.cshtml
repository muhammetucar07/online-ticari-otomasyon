@using online_ticari_otomasyon.Models.Class
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Ürünler</h2>
<br />
<p>Bugünün tarihi: @DateTime.Now.ToString("dd/MM/yyyy")</p>
<br />
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ürün Adı</th>
        <th>Marka</th>        
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Durum</th>
        <th>Görsel</th>
        <th>Kategori</th>        
        <th>Satış Id</th>
        <th>Sil</th>
        <th>Güncelle</th>
 
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.Brand</td>
            <td>@item.Stock</td>
            <td>@item.PurchasePrice</td>
            <td>@item.SalePrice</td>
            <td>@item.Status</td>
            <td>@item.Image</td>
            <td>@(item.Categories != null ? item.Categories.CategoryName : "Kategori Yok")</td>
            <td>@item.Saless?.Count ?? 0</td>
            <td><a href="@Url.Action("ProductDelete", "Product", new { id = item.ProductID })" class="btn btn-danger">Sil</a></td>
            <td><a href="@Url.Action("ProductGet", "Product", new { id = item.ProductID })" class="btn btn-success">Güncelle</a></td>
       </tr>
    }
</table>

<a href="@Url.Action("ProductAdd", "Product")" class="btn btn-primary">Yeni Ürün</a>